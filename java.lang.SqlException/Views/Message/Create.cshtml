@model java.lang.SqlException.Models.MessageViewModel

<h2>Create a New Message</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.LabelFor(model => model.ReceiverId)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.ReceiverId, Model.MessageRecipients, "Select a User", null)
        @Html.ValidationMessageFor(model => model.ReceiverId)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Subject)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Subject)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Content)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Content)
    </div>
    <p>
        <input type="submit" value="Save" />
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
